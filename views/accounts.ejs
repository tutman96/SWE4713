<%- include('partials/header') %>
<div class="row">
	<div class="col-xs-6">
		<span class="title"><%= title %></span>
	</div>
	<div class="col-xs-6 text-right">
		<a class="btn btn-primary" href="/account/new">New Account</a>
	</div>
</div>
<table class="table table-condensed table-hover table-striped">
	<thead>
		<tr>
			<th></th>
			<th>Account Number</th>
			<th>Account Type</th>
			<th>Account Name</th>
			<th>Initial Balance</th>
			<th>Created Time</th>
			<th></th>
		</tr>
	</thead>
	<% for (var account of accounts) { %>
		<tr>
			<td><% if (account.Active) { %>
				<div class="label label-success">Active</div>
			<% } else { %>
				<div class="label label-warning">Inactive</div>
			<% } %></td>
			<td><%= account.AccountNumber %></td>
			<td><%= account.AccountType.AccountType %></td>
			<td><%= account.AccountName %></td>
			<td style="text-align:right;padding-right:1em"><%= balanceFormat(account.InitialBalance) %></td>
			<td><%= dateFormat(account.CreatedTime) %></td>
			<td>
				<a class="btn btn-sm btn-link pull-right" href="/account/<%=account.AccountNumber%>">Edit</a>
		</tr>
	<% } %>
</table>

<%- include('partials/footer') %>
